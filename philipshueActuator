    if(color.toLowerCase() === 'green')\n      color = '00FF00'\n\n    const rgb = hexToRgb(color)\n\n    const hsv = rgbToHsv(rgb[0], rgb[1], rgb[2])\n\n    // console.log(\"hsv = \" + hsv)\n\n    hue = parseInt(hsv[0] * 256 * 256) // for philips hue the hue goes 0 -> 65535\n    sat = parseInt(hsv[1] * 256)\n    bri = parseInt(hsv[2] * 256)\n  }\n\n\n\n  getToken((err, token) => {\n    if(err) return send(err)\n    const opts = {\n      token: token.accessToken,\n      on: on,\n      hue: hue,\n      sat: sat,\n      bri: bri\n    }\n    setState(opts)\n  });\n}else{\n  send(new Error(\"Missing properties\"));\n}\n",
